<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/element_chi_tiet_history_image"
        android:layout_width="123dp"
        android:layout_height="140dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quay_hang_bbq" />

    <TextView
        android:id="@+id/element_chi_tiet_history_name"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:text="Ten mon an"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/element_chi_tiet_history_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/element_chi_tiet_history_number"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_weight="1"
        android:text="tong gia so luong mon"
        android:textColor="#CDDC39"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_history_name" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="29dp"
        android:layout_height="33dp"
        app:layout_constraintEnd_toStartOf="@+id/element_chi_tiet_history_number"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_history_name"
        app:srcCompat="@drawable/raise" />

    <TextView
        android:id="@+id/element_chi_tiet_history_raise"
        android:layout_width="82dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_history_number" />

    <TextView
        android:id="@+id/element_chi_tiet_history_note"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:text="ghi chu"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_history_raise" />

</androidx.constraintlayout.widget.ConstraintLayout>