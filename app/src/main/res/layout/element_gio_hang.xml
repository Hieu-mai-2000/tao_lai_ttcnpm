<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/element_gio_hang_hinh_mon"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/quay_hang_bbq"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/element_gio_hang_ten_mon"
                    android:text="Tên món"
                    android:fontFamily="serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/element_gio_hang_total_raise_mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="serif"
                    android:text="1000"
                    android:textColor="#F44336"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/element_gio_hang_so_luong_dat"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"
                android:background="@color/colorPrimary"
                app:finalNumber="20"
                app:initialNumber="1"
                app:textSize="8sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú"
                android:id="@+id/element_gio_hang_ghi_chu"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:padding="12dp"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/element_gio_hang_image_xoa"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/ic_baseline_remove_shopping_cart_24"
        android:layout_gravity="right|top"/>
</androidx.cardview.widget.CardView>