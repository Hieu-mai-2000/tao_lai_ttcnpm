<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/element_chi_tiet_food_chef_name"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/element_chi_tiet_food_chef_note"
        android:layout_width="337dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:text="note"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_food_chef_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=" ______________________________________________________________"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_food_chef_note" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="72dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:text="Ghi Chú :"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/element_chi_tiet_food_chef_note"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_food_chef_name" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:text="Số Lượng :"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_food_chef_name" />

    <TextView
        android:id="@+id/element_chi_tiet_chef_so_luong"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/element_chi_tiet_food_chef_name" />
</androidx.constraintlayout.widget.ConstraintLayout>